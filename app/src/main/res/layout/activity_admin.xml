<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <Button
        android:id="@+id/wordle_button"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:text="@string/game_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="@string/admin_menu"
            android:textAlignment="center"
            android:textColor="#63BDA4"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target Words"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/targetWordsInput"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/targetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Target Words" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valid Words"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/validWordsInput"
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/validWordsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Valid Words" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>